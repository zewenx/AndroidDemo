<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="zeven.demos">

    <uses-sdk
        android:minSdkVersion="17"
        android:targetSdkVersion="23"/>

    <uses-permission android:name="android.permission.CAMERA"/>
    <uses-permission android:name="android.permission.VIBRATE"/>
    <uses-permission android:name="android.permission.INTERNET"/>
    <!-- 联网 -->
    <!-- 使用存储卡 -->
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <!-- 访问网络状态 plus.networkinfo.* -->
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.READ_LOGS" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:largeHeap="true"
        android:theme="@style/AppTheme"
        android:name="zeven.base.App"
        >
        <activity android:name="zeven.activity.MainActivity">
            <intent-filter>
                <category android:name="android.intent.category.LAUNCHER"/>

                <action android:name="android.intent.action.MAIN"/>
            </intent-filter>
        </activity>
        <activity android:name="zeven.activity.FlipperDemoActivity"/>
        <activity android:name="zeven.activity.HorizontalListViewDemoActivity"/>
        <activity android:name="zeven.activity.CameraDemoActivity"
            >

        </activity>
        <activity android:name="zeven.activity.TitanicDemoActivity"/>
        <activity android:name="zeven.eventbus.TraditionalWayActivity"/>
        <activity android:name="zeven.eventbus.TraditionalWayActivity2"/>
        <activity android:name="zeven.eventbus.TraditionalWayActivity3"/>
        <activity android:name="zeven.eventbus.FragmentsActivity"/>
        <activity android:name="zeven.activity.GridViewLayoutActivity"/>
        <activity
            android:name="zeven.activity.GifActivity"
            android:hardwareAccelerated="true"
            />
        <activity android:name="zeven.activity.CalendarDemoActivity"/>
        <activity android:name="zeven.activity.VolleyDemoActivity"/>
        <activity android:name="zeven.activity.LoadingActivity"/>
        <activity android:name="zeven.activity.WeixinAvtivity"/>
        <activity android:name="zeven.activity.LayoutTestActivity"/>
        <activity android:name="zeven.activity.FlowLayoutActivity"/>
        <activity android:name="zeven.activity.BallGameActivity"/>
        <activity android:name="zeven.activity.SurfaceViewActivity"/>
        <activity android:name="zeven.activity.PicassoDemoActivity"/>
        <activity android:name="zeven.activity.JavaScriptInteractionActivity"/>
        <activity android:name="zeven.activity.BitmapShaderActivity"/>
    </application>

</manifest>
